# Multi-stage Docker build with Rust backend integration
# 統合版Dockerfile（アプローチA）: Rust + Node.js in single container

# Stage 1: Rust Builder
FROM rust:1.75-alpine AS rust-builder

WORKDIR /rust-build

# Install Rust build dependencies
RUN apk add --no-cache musl-dev

# Copy Rust backend source
COPY rust-backend/Cargo.toml rust-backend/Cargo.lock ./
COPY rust-backend/src ./src

# Build Rust backend with optimizations
RUN cargo build --release --target x86_64-unknown-linux-musl && \
    strip /rust-build/target/x86_64-unknown-linux-musl/release/rust-backend

# Stage 2: Node.js Builder
FROM node:18-alpine AS node-builder

WORKDIR /app

# Copy package files
COPY package*.json ./

# Install dependencies
RUN npm ci --legacy-peer-deps

# Copy source code
COPY . .

# Build React client
RUN npm run build

# Stage 3: Production Runtime
FROM alpine:3.19 AS production

# Install minimal runtime dependencies
RUN apk add --no-cache \
    nodejs \
    dumb-init \
    && addgroup -g 1001 -S appuser \
    && adduser -S appuser -u 1001

WORKDIR /app

# Copy Rust binary from rust-builder
COPY --from=rust-builder --chown=appuser:appuser \
    /rust-build/target/x86_64-unknown-linux-musl/release/rust-backend \
    /app/rust-backend

# Copy Node.js application from node-builder
COPY --from=node-builder --chown=appuser:appuser /app/package*.json ./
COPY --from=node-builder --chown=appuser:appuser /app/node_modules ./node_modules
COPY --from=node-builder --chown=appuser:appuser /app/server.js ./
COPY --from=node-builder --chown=appuser:appuser /app/src ./src
COPY --from=node-builder --chown=appuser:appuser /app/build ./build

# Copy startup script
COPY --chown=appuser:appuser docker-entrypoint-rust.sh /app/
RUN chmod +x /app/docker-entrypoint-rust.sh

# Switch to non-root user
USER appuser

# Expose ports
EXPOSE 3001 8080

# Set environment variables
ENV NODE_ENV=production
ENV PORT=3001
ENV LOG_LEVEL=info
ENV USE_RUST_BACKEND=true
ENV RUST_BACKEND_URL=http://localhost:8080

# Health check for Node.js proxy
HEALTHCHECK --interval=30s --timeout=10s --start-period=10s --retries=3 \
    CMD node -e "require('http').get('http://localhost:3001/api/health', (r) => process.exit(r.statusCode === 200 ? 0 : 1)).on('error', () => process.exit(1))"

# Start with dumb-init for proper signal handling
ENTRYPOINT ["dumb-init", "--"]
CMD ["/app/docker-entrypoint-rust.sh"]
